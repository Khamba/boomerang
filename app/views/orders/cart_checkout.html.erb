      <div class="container">
            <header class="page-header">
                <h1 class="page-title">Checkout Order</h1>
            </header>
            <!-- <p class="checkout-login-text"></p> -->
            <div class="row row-col-gap" data-gutter="60">
                <div class="col-md-4">
                    <h3 class="widget-title">Order Info</h3>
                    <div class="box">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Days</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                              <% @cart.line_items.each do |line_item| %>
                                <tr>
                                    <td><%= line_item.product.name %></td>
                                    <td><%= line_item.days_to_rent %></td>
                                    <td><%= line_item.price %></td>
                                </tr>
                              <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-md-4">
                    <h3 class="widget-title">Billng Details</h3>
                    <%= form_for(@order_shipping_address, url: place_order_url, html: { id: 'place_order' }) do %>
                        <div class="form-group">
                            <label>First &amp; Last Name</label>
                            <input class="form-control" type="text" name="order[name]" value='<%= @order_shipping_address.name %>' />
                            <p style="color: red"><%= @order_shipping_address.errors.full_messages_for(:name).first %></p>
                        </div>
                        <div class="form-group">
                            <label>E-mail</label>
                            <input class="form-control" type="text" name="order[email]" value='<%= @order_shipping_address.email %>' />
                            <p style="color: red"><%= @order_shipping_address.errors.full_messages_for(:email).first %></p>
                        </div>
                        <div class="form-group">
                            <label>Phone Number</label>
                            <input class="form-control" type="text" name="order[phone_number]" value='<%= @order_shipping_address.phone_number %>' />
                            <p style="color: red"><%= @order_shipping_address.errors.full_messages_for(:phone_number).first %></p>
                        </div>
                        <div class="form-group">
                            <label>State</label>
                            <input class="form-control" type="text" name="order[state]" value='<%= @order_shipping_address.state %>' />
                            <p style="color: red"><%= @order_shipping_address.errors.full_messages_for(:state).first %></p>
                        </div>
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label>City</label>
                                    <input class="form-control" type="text" name="order[city]" value='<%= @order_shipping_address.city %>' />
                                    <p style="color: red"><%= @order_shipping_address.errors.full_messages_for(:city).first %></p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Zip/Postal</label>
                                    <input class="form-control" type="text" name="order[zip]" value='<%= @order_shipping_address.zip %>' />
                                    <p style="color: red"><%= @order_shipping_address.errors.full_messages_for(:zip).first %></p>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Address</label>
                            <input class="form-control" type="text" name="order[address]" value='<%= @order_shipping_address.address %>' />
                            <p style="color: red"><%= @order_shipping_address.errors.full_messages_for(:address).first %></p>
                        </div>
                    <% end %>
                </div>
                <div class="col-md-4">
                    <h3 class="widget-title">Payment</h3>
                    <p> Payment will be done by cash on delivery. </p>
                    <%= button_tag('Place Order', form: 'place_order', class: 'btn btn-primary') %>
                </div>
            </div>
