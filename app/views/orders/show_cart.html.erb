        <div class="container">
            <header class="page-header">
                <h1 class="page-title">My Shopping Bag</h1>
            </header>
            <% if @cart.empty? %>
              <div class="row">
                <div class="col-md-10">
                  <h4>Your cart is empty.</h4>
                </div>
                <div class="gap"></div>
              </div>
            <% else %>
              <div class="row">
                  <div class="col-md-10">
                      <table class="table table table-shopping-cart">
                          <thead>
                              <tr>
                                  <th>Product</th>
                                  <th>Title</th>
                                  <th>Size</th>
                                  <th>Price</th>
                                  <th>Days to Rent</th>
                                  <th>Total</th>
                                  <th>Remove</th>
                              </tr>
                          </thead>
                          <tbody>
                              <% @cart.line_items.each do |line_item| %>
                                <tr>
                                    <td class="table-shopping-cart-img">
                                        <a href=<%= product_path(line_item.product_id) %>>
                                            <img src=<%= line_item.product.images[0].url %> />
                                        </a>
                                    </td>
                                    <td class="table-shopping-cart-title"><a href=<%= product_path(line_item.product_id) %>><%= line_item.product.name %></a>
                                    </td>
                                    <td><%= line_item.size %></td>
                                    <td><%= line_item.price %></td>
                                    <td><%= line_item.days_to_rent %></td>
                                    <td><%= line_item.price %></td>
                                    <td>
                                        <a class="fa fa-close table-shopping-remove" href=<%= remove_from_cart_path(line_item_id: line_item.id) %>></a>
                                    </td>
                                </tr>
                              <% end %>

                          </tbody>
                      </table>
                      <div class="gap gap-small"></div>
                  </div>
                  <div class="col-md-2">
                      <ul class="shopping-cart-total-list">
                          <li><span>Subtotal</span><span>$2199</span>
                          </li>
                          <li><span>Shopping</span><span>Free</span>
                          </li>
                          <li><span>Taxes</span><span>$0</span>
                          </li>
                          <li><span>Total</span><span>$2199</span>
                          </li>
                      </ul><a class="btn btn-primary" href="shopping-cart-default=true.html#">Checkout</a>
                  </div>
              </div>
            <% end %>
            <ul class="list-inline">
                <li><a class="btn btn-default" href="/">Continue Shopping</a>
                </li>
            </ul>

        </div>

        <div class="gap"></div>


        <footer class="main-footer">
            <div class="container">
                <div class="row row-col-gap" data-gutter="60">
                    <div class="col-md-4">
                        <h4 class="widget-title-sm">TheBoomerang</h4>
