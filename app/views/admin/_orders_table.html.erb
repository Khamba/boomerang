<table class="table table-bordered table-hover table-striped">
  <thead>
    <th>Order Id</th>
    <th>Order Items</th>
    <th>Order Subtotal</th>
    <th>Order Total</th>
    <th>Order Status</th>
  </thead>
  <tbody>
    <% orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td>
          <% order.line_items.each do |line_item| %>
            <ul>
              <li><%= line_item.product.name %>, <%= line_item.price %></li>
            </ul>
          <% end %>
        </td>
        <td><%= order.subtotal %></td>
        <td><%= order.total %></td>
        <td><%= order.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>
